<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrainingJournal.Views"
             xmlns:Custom="http://metro.mahapps.com/winfx/xaml/controls" x:Class="TrainingJournal.Views.Workspace"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <TabControl x:Name="MainTabs" HorizontalAlignment="Left" Height="586" Margin="3,4,-3,0" VerticalAlignment="Top" Width="1000">
            <TabItem Header="Профиль">
                <ScrollViewer CanContentScroll="True" VerticalScrollBarVisibility="Auto">
                    <Grid Height="696">
                        <Image x:Name="Avatar" 
						    HorizontalAlignment="Left"
						    Height="100" Margin="200,6,0,0" 
						    VerticalAlignment="Top"
                            Source="../Images/noAvatar.jpg"
						    Width="100"/>
                        <TextBlock x:Name="NameTextBlock" 
						HorizontalAlignment="Center" 
						Margin="305,38,449,0" 
						TextWrapping="Wrap" 
						FontSize="30" 
                        TextAlignment="Center"
						Text="{Binding Name}"
						VerticalAlignment="Top" 
						Width="240"/>
                        <GroupBox x:Name="MeasurementGroupBox" Header="Замеры тела" HorizontalAlignment="Left" Margin="203,110,0,0" VerticalAlignment="Top" Height="287" Width="400">
                            <Grid HorizontalAlignment="Left" Height="257" Margin="-5,-7,-7,-29" VerticalAlignment="Top" Width="400">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Label x:Name="NeckLabel" 
								Grid.Row="1"
								Grid.Column="0"
								Margin="20,5"
								VerticalAlignment="Top"
								Content="Шея"/>
                                <TextBox x:Name="NeckTextBox"
								Grid.Row="1"
								Grid.Column="1"
								Margin="5,5,5,5"
								VerticalAlignment="Top" />
                                <TextBox x:Name="NeckBackTextBox"
								Grid.Row="1"
								Grid.Column="2"
								Margin="5,5,5,5"
								VerticalAlignment="Top" IsReadOnly="True" />

                                <Label x:Name="ChestLabel" 
								Grid.Row="2"
								Grid.Column="0"
								Margin="20,5"
								VerticalAlignment="Top"
								Content="Грудь"/>
                                <TextBox x:Name="ChestTextBox"
								Grid.Row="2"
								Grid.Column="1"
								Margin="5,5,5,5"
								VerticalAlignment="Top" />
                                <TextBox x:Name="ChestBackTextBox"
								Grid.Row="2"
								Grid.Column="2"
								Margin="5,5,5,5"
								VerticalAlignment="Top" IsReadOnly="True" />

                                <Label x:Name="ArmLabel" 
								Grid.Row="3"
								Grid.Column="0"
								Margin="20,5"
								VerticalAlignment="Top"
								Content="Руки"/>
                                <TextBox x:Name="ArmTextBox"
								Grid.Row="3"
								Grid.Column="1"
								Margin="5,5,5,5"
								VerticalAlignment="Top" />
                                <TextBox x:Name="ArmBackTextBox"
								Grid.Row="3"
								Grid.Column="2"
								Margin="5,5,5,5"
								VerticalAlignment="Top" IsReadOnly="True" />

                                <Label x:Name="WaistLabel" 
								Grid.Row="4"
								Grid.Column="0"
								Margin="20,5"
								VerticalAlignment="Top"
								Content="Талия"/>
                                <TextBox x:Name="WaistTextBox"
								Grid.Row="4"
								Grid.Column="1"
								Margin="5,5,5,5"
								VerticalAlignment="Top" />
                                <TextBox x:Name="WaistBackTextBox"
								Grid.Row="4"
								Grid.Column="2"
								Margin="5,5,5,5"
								VerticalAlignment="Top" IsReadOnly="True" />

                                <Label x:Name="HipLabel" 
								Grid.Row="5"
								Grid.Column="0"
								Margin="20,5"
								VerticalAlignment="Top"
								Content="Бедра"/>
                                <TextBox x:Name="HipTextBox"
								Grid.Row="5"
								Grid.Column="1"
								Margin="5,5,5,5"
								VerticalAlignment="Top" />
                                <TextBox x:Name="HipBackTextBox"
								Grid.Row="5"
								Grid.Column="2"
								Margin="5,5,5,5"
								VerticalAlignment="Top" IsReadOnly="True" />

                                <Label x:Name="ShinLabel" 
								Grid.Row="6"
								Grid.Column="0"
								Margin="20,5"
								VerticalAlignment="Top"
								Content="Голень"/>
                                <TextBox x:Name="ShinTextBox"
								Grid.Row="6"
								Grid.Column="1"
								Margin="5,5,5,5"
								VerticalAlignment="Top" />
                                <TextBox x:Name="ShinBackTextBox"
								Grid.Row="6"
								Grid.Column="2"
								Margin="5,5,5,5"
								VerticalAlignment="Top" IsReadOnly="True" />
                                <Button x:Name="SaveButton" 
								Content="Сохранить" 
								Grid.Column="1"
								Grid.Row="7" 
								HorizontalAlignment="Left" 
								Margin="10,10,0,0" 
								VerticalAlignment="Top" Width="80" Click="SaveButton_Click"/>
                                <Label x:Name="SuccesLabel" 
                                   Content="" 
                                   Grid.Column="2" 
                                   HorizontalAlignment="Left" 
                                   Margin="10,10,0,0" 
                                   Grid.Row="7" 
                                   VerticalAlignment="Top" 
                                   RenderTransformOrigin="-1.211,0.885"/>
                            </Grid>
                        </GroupBox>
                        <Image x:Name="MeasurementImage"
						Source="../Images/zamery-tela.jpg" 
						Height="287"
						Margin="607,110,204,0" 
						VerticalAlignment="Top" Stretch="Fill"/>

                        <DataGrid Name="AntropometryHistoryDatagrid" 
                                  Margin="203,402,203,0"
                                  IsReadOnly="True"
                                  AutoGenerateColumns="False"
                                  CanUserDeleteRows="False"
                                  CanUserAddRows="False" Height="284" VerticalAlignment="Top">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Дата" 
                                                    Width="*"
                                                    Binding="{Binding Date, StringFormat=dd-MM-yyyy}"/>
                                <DataGridTextColumn Header="Шея"
                                                    Width="*"
                                                    Binding="{Binding Nech}"/>
                                <DataGridTextColumn Header="Грудь"
                                                    Width="*"
                                                    Binding="{Binding Chest}"/>
                                <DataGridTextColumn Header="Руки"
                                                    Width="*"
                                                    Binding="{Binding Arm}"/>
                                <DataGridTextColumn Header="Талия"
                                                    Width="*"
                                                    Binding="{Binding Waist}"/>
                                <DataGridTextColumn Header="Бедра"
                                                    Width="*"
                                                    Binding="{Binding Hip}"/>
                                <DataGridTextColumn Header="Голень"
                                                    Width="*"
                                                    Binding="{Binding Shin}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            <TabItem x:Name="JournalTabItem" Header="Журнал тренировок" Loaded="JournalTabItem_Loaded">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Name="CurrentDateTextBlock"
                                   Grid.Column="0"
                                   VerticalAlignment="Center"
                                   Margin="5,0"
                                   Text="Sample"/>
                        
                        <DatePicker Name="DatePicker"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Margin="5,0"/>
                        
                        <Button Name="AddButton"
                                Grid.Column="3"
                                Content="Добавить"
                                Click="AddButton_OnClick" Height="26" VerticalAlignment="Bottom"/>
                    </Grid>
                    
                    <StackPanel Name="ExerciseStackPanel" 
                                Grid.Row="1" 
                                CanVerticallyScroll="True" 
                                ScrollViewer.CanContentScroll="True"/>
                </Grid>
            </TabItem>
            <TabItem Header="Справка по упражнениям">
                <Grid>
                    <DockPanel>
                        
                    </DockPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>