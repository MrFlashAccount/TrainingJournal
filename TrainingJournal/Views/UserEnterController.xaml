<UserControl x:Class="TrainingJournal.Views.UserEnterController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="410">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Margin="5" BorderThickness="1" BorderBrush="CornflowerBlue">
        <Button 
            HorizontalContentAlignment="Stretch" 
            Click="EnterButton_OnClick" BorderThickness="0" Cursor="Hand">
            <Grid Margin="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="40" />
                </Grid.ColumnDefinitions>

                <Image x:Name="Avatar"
                       Grid.Column="0"
                       Source="../Images/noAvatar.jpg"
                       Width="60" />

                <TextBlock Name="UserName"
                           Margin="5,0"
                           Grid.Column="1"
                           TextAlignment="Left"
                           VerticalAlignment="Center"
                           Text="{Binding Name}"
                           FontSize="20" />

                <Button Name="EnterButton"
                        Grid.Column="3"
                        Margin="0,10"
                        BorderThickness="0"
                        Height="40"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        MaxWidth="40" MaxHeight="40"
                        Background="{x:Null}" 
                        BorderBrush="{x:Null}" 
                        Foreground="Black">
                    <Rectangle Width="20" Height="20"
                               Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_arrow_right}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                </Button>
            </Grid>
        </Button>
    </Border>
</UserControl>

